set nocompatible
filetype off

syntax enable
set ruler
set autoindent
set backspace=indent,eol,start
set cursorline
set noerrorbells
set ttyfast
set hlsearch
set ignorecase
set smartcase
set incsearch
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set number
set numberwidth=4
set nowrap

" WSL support
set term=screen-256color
set t_ut=

map q <Nop>

colorscheme monokai
