set nocompatible
filetype off

syntax enable
set ruler
set autoindent
set backspace=indent,eol,start
set cursorline
set noerrorbells
set ttyfast
set hlsearch
set ignorecase
set smartcase
set incsearch
set numberwidth=3
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set number

colorscheme monokai
